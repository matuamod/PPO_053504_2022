<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/space"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/americansAreAsleepView"
        android:layout_width="374dp"
        android:layout_height="41dp"
        android:layout_marginBottom="1dp"
        android:background="@color/black"
        android:fontFamily="monospace"
        android:gravity="center"
        android:text="@string/americans_are_asleep"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/white"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="350dp"
        android:layout_height="37dp"
        android:layout_marginStart="165dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="161dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioGroup
            android:id="@+id/radioGroup_1"
            android:layout_width="345dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioDistanceButton"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/radio_selector"
                android:button="@android:color/transparent"
                android:elevation="4dp"
                android:fontFamily="monospace"
                android:onClick="chosenDistance"
                android:paddingHorizontal="12dp"
                android:text="Distance"
                android:textColor="@drawable/text_color"
                android:textSize="16sp"
                tools:ignore="TouchTargetSizeCheck"
                tools:layout_editor_absoluteX="52dp"
                tools:layout_editor_absoluteY="307dp" />

            <RadioButton
                android:id="@+id/radioWeightButton"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginHorizontal="15dp"
                android:background="@drawable/radio_selector"
                android:button="@android:color/transparent"
                android:elevation="4dp"
                android:fontFamily="monospace"
                android:onClick="chosenWeight"
                android:paddingHorizontal="12dp"
                android:text="Weight"
                android:textColor="@drawable/text_color"
                android:textSize="16sp"
                tools:ignore="TouchTargetSizeCheck"
                tools:layout_editor_absoluteX="167dp"
                tools:layout_editor_absoluteY="307dp" />

            <RadioButton
                android:id="@+id/radioCurrencyButton"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/radio_selector"
                android:button="@android:color/transparent"
                android:elevation="4dp"
                android:fontFamily="monospace"
                android:onClick="chosenCurrency"
                android:paddingHorizontal="12dp"
                android:text="Currency"
                android:textColor="@drawable/text_color"
                android:textSize="16sp"
                tools:ignore="TouchTargetSizeCheck"
                tools:layout_editor_absoluteX="285dp"
                tools:layout_editor_absoluteY="307dp" />

        </RadioGroup>

    </LinearLayout>

    <TextView
        android:id="@+id/convertFromView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginBottom="25dp"
        android:fontFamily="monospace"
        android:text="Convert from:"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/convertFromView2"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/convertFromView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="monospace"
        android:text="Convert to:"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/entryTextField"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="340dp"
        android:layout_height="30dp"
        android:layout_marginStart="66dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/entryTextField"
        app:layout_constraintStart_toEndOf="@+id/convertFromView2">

        <RadioGroup
            android:id="@+id/radioGroup_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioToUnitButton_1"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/radio_selector"
                android:button="@android:color/transparent"
                android:elevation="4dp"
                android:enabled="false"
                android:fontFamily="monospace"
                android:gravity="center"
                android:text="choose"
                android:textColor="@drawable/text_color"
                android:textSize="16sp"
                tools:ignore="TouchTargetSizeCheck"
                tools:layout_editor_absoluteX="52dp"
                tools:layout_editor_absoluteY="307dp" />

            <RadioButton
                android:id="@+id/radioToUnitButton_2"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:background="@drawable/radio_selector"
                android:button="@android:color/transparent"
                android:elevation="4dp"
                android:enabled="false"
                android:fontFamily="monospace"
                android:gravity="center"
                android:text="the"
                android:textColor="@drawable/text_color"
                android:textSize="16sp"
                tools:ignore="TouchTargetSizeCheck"
                tools:layout_editor_absoluteX="167dp"
                tools:layout_editor_absoluteY="307dp" />

            <RadioButton
                android:id="@+id/radioToUnitButton_3"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/radio_selector"
                android:button="@android:color/transparent"
                android:elevation="4dp"
                android:enabled="false"
                android:fontFamily="monospace"
                android:gravity="center"
                android:text="item"
                android:textColor="@drawable/text_color"
                android:textSize="16sp"
                tools:ignore="TouchTargetSizeCheck"
                tools:layout_editor_absoluteX="285dp"
                tools:layout_editor_absoluteY="307dp" />

        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="340dp"
        android:layout_height="30dp"
        android:layout_marginStart="53dp"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
        app:layout_constraintStart_toEndOf="@+id/convertFromView">

        <RadioGroup
            android:id="@+id/radioGroup_2"
            android:layout_width="340dp"
            android:layout_height="30dp"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="148dp"
            tools:layout_editor_absoluteY="113dp">

            <RadioButton
                android:id="@+id/radioFromUnitButton_1"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/radio_selector"
                android:button="@android:color/transparent"
                android:elevation="4dp"
                android:enabled="false"
                android:fontFamily="monospace"
                android:gravity="center"
                android:text="choose"
                android:textColor="@drawable/text_color"
                android:textSize="16sp"
                tools:ignore="TouchTargetSizeCheck"
                tools:layout_editor_absoluteX="52dp"
                tools:layout_editor_absoluteY="307dp" />

            <RadioButton
                android:id="@+id/radioFromUnitButton_2"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:background="@drawable/radio_selector"
                android:button="@android:color/transparent"
                android:elevation="4dp"
                android:enabled="false"
                android:fontFamily="monospace"
                android:gravity="center"
                android:text="the"
                android:textColor="@drawable/text_color"
                android:textSize="16sp"
                tools:ignore="TouchTargetSizeCheck"
                tools:layout_editor_absoluteX="167dp"
                tools:layout_editor_absoluteY="307dp" />

            <RadioButton
                android:id="@+id/radioFromUnitButton_3"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="35dp"
                android:background="@drawable/radio_selector"
                android:button="@android:color/transparent"
                android:elevation="4dp"
                android:enabled="false"
                android:fontFamily="monospace"
                android:gravity="center"
                android:text="item"
                android:textColor="@drawable/text_color"
                android:textSize="16sp"
                tools:ignore="TouchTargetSizeCheck"
                tools:layout_editor_absoluteX="285dp"
                tools:layout_editor_absoluteY="307dp" />

        </RadioGroup>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/entryTextField"
        android:layout_width="315dp"
        android:layout_height="57dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="17dp"
        android:cursorVisible="false"
        android:ems="10"
        android:enabled="false"
        android:fontFamily="monospace"
        android:hint="Entry field :"
        android:inputType="numberDecimal"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:textSize="20dp"
        app:backgroundTint="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/outputTextField"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/outputTextField"
        android:layout_width="315dp"
        android:layout_height="57dp"
        android:layout_marginStart="14dp"
        android:layout_marginBottom="52dp"
        android:cursorVisible="false"
        android:ems="10"
        android:enabled="false"
        android:fontFamily="monospace"
        android:hint="Result :"
        android:inputType="numberDecimal"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:textSize="20dp"
        app:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonCopy_1"
        android:layout_width="50dp"
        android:layout_height="42dp"
        android:layout_marginBottom="33dp"
        android:background="?android:attr/selectableItemBackground"
        android:drawableTop="@drawable/ic_baseline_content_copy_24"
        android:drawableTint="@color/white"
        android:fontFamily="monospace"
        android:onClick="makeCopyFrom"
        android:text="copy"
        android:textColor="@color/white"
        android:textSize="6dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/buttonCopy_2"
        app:layout_constraintStart_toEndOf="@+id/entryTextField"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/buttonCopy_2"
        android:layout_width="50dp"
        android:layout_height="42dp"
        android:layout_marginBottom="64dp"
        android:background="?android:attr/selectableItemBackground"
        android:drawableTop="@drawable/ic_baseline_content_copy_24"
        android:drawableTint="@color/white"
        android:fontFamily="monospace"
        android:onClick="makeCopyFrom"
        android:text="copy"
        android:textColor="@color/white"
        android:textSize="6dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/outputTextField"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/vice_versa_button"
        android:layout_width="92dp"
        android:layout_height="80dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/vice_versa"
        android:elevation="4dp"
        android:enabled="false"
        android:onClick="onViceVersaClick"
        app:layout_constraintBottom_toTopOf="@+id/keyboard_holder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toEndOf="@+id/linearLayout4"
        tools:ignore="SpeakableTextPresentCheck" />

    <FrameLayout
        android:id="@+id/keyboard_holder"
        android:layout_width="451dp"
        android:layout_height="178dp"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonCopy_1">

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>