<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/space"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/convertFromView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="147dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="147dp"
        android:fontFamily="monospace"
        android:text="Convert to:"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/entryTextField" />

    <TextView
        android:id="@+id/americansAreAsleepView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="51dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="15dp"
        android:background="@color/black"
        android:fontFamily="monospace"
        android:text="@string/americans_are_asleep"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/white"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="406dp"
        android:layout_height="97dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/americansAreAsleepView">

        <RadioGroup
            android:id="@+id/radioGroup_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioDistanceButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@drawable/radio_selector"
                android:button="@android:color/transparent"
                android:elevation="4dp"
                android:fontFamily="monospace"
                android:onClick="chosenDistance"
                android:padding="12dp"
                android:text="Distance"
                android:textColor="@drawable/text_color"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="52dp"
                tools:layout_editor_absoluteY="307dp" />

            <RadioButton
                android:id="@+id/radioWeightButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@drawable/radio_selector"
                android:button="@android:color/transparent"
                android:elevation="4dp"
                android:fontFamily="monospace"
                android:onClick="chosenWeight"
                android:padding="12dp"
                android:text="Weight"
                android:textColor="@drawable/text_color"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="167dp"
                tools:layout_editor_absoluteY="307dp" />

            <RadioButton
                android:id="@+id/radioCurrencyButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@drawable/radio_selector"
                android:button="@android:color/transparent"
                android:elevation="4dp"
                android:fontFamily="monospace"
                android:onClick="chosenCurrency"
                android:padding="12dp"
                android:text="Currency"
                android:textColor="@drawable/text_color"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="285dp"
                tools:layout_editor_absoluteY="307dp" />

        </RadioGroup>

    </LinearLayout>

    <TextView
        android:id="@+id/convertFromView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="136dp"
        android:layout_marginEnd="136dp"
        android:fontFamily="monospace"
        android:text="Convert from:"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="409dp"
        android:layout_height="58dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="101dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/convertFromView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/convertFromView">

        <RadioGroup
            android:id="@+id/radioGroup_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioFromUnitButton_1"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_marginVertical="15dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/radio_selector"
                android:button="@android:color/transparent"
                android:elevation="4dp"
                android:enabled="false"
                android:fontFamily="monospace"
                android:gravity="center"
                android:text="choose"
                android:textColor="@drawable/text_color"
                android:textSize="16sp"
                tools:ignore="TouchTargetSizeCheck"
                tools:layout_editor_absoluteX="52dp"
                tools:layout_editor_absoluteY="307dp" />

            <RadioButton
                android:id="@+id/radioFromUnitButton_2"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginVertical="15dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:background="@drawable/radio_selector"
                android:button="@android:color/transparent"
                android:elevation="4dp"
                android:enabled="false"
                android:fontFamily="monospace"
                android:gravity="center"
                android:text="the"
                android:textColor="@drawable/text_color"
                android:textSize="16sp"
                tools:ignore="TouchTargetSizeCheck"
                tools:layout_editor_absoluteX="167dp"
                tools:layout_editor_absoluteY="307dp" />

            <RadioButton
                android:id="@+id/radioFromUnitButton_3"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_marginVertical="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="35dp"
                android:background="@drawable/radio_selector"
                android:button="@android:color/transparent"
                android:elevation="4dp"
                android:enabled="false"
                android:fontFamily="monospace"
                android:gravity="center"
                android:text="item"
                android:textColor="@drawable/text_color"
                android:textSize="16sp"
                tools:ignore="TouchTargetSizeCheck"
                tools:layout_editor_absoluteX="285dp"
                tools:layout_editor_absoluteY="307dp" />

        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="409dp"
        android:layout_height="58dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/convertFromView2">

        <RadioGroup
            android:id="@+id/radioGroup_3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioToUnitButton_1"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_marginVertical="15dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/radio_selector"
                android:button="@android:color/transparent"
                android:elevation="4dp"
                android:enabled="false"
                android:fontFamily="monospace"
                android:gravity="center"
                android:text="choose"
                android:textColor="@drawable/text_color"
                android:textSize="16sp"
                tools:ignore="TouchTargetSizeCheck"
                tools:layout_editor_absoluteX="52dp"
                tools:layout_editor_absoluteY="307dp" />

            <RadioButton
                android:id="@+id/radioToUnitButton_2"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginVertical="15dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:background="@drawable/radio_selector"
                android:button="@android:color/transparent"
                android:elevation="4dp"
                android:enabled="false"
                android:fontFamily="monospace"
                android:gravity="center"
                android:text="the"
                android:textColor="@drawable/text_color"
                android:textSize="16sp"
                tools:ignore="TouchTargetSizeCheck"
                tools:layout_editor_absoluteX="167dp"
                tools:layout_editor_absoluteY="307dp" />

            <RadioButton
                android:id="@+id/radioToUnitButton_3"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_marginVertical="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="35dp"
                android:background="@drawable/radio_selector"
                android:button="@android:color/transparent"
                android:elevation="4dp"
                android:enabled="false"
                android:fontFamily="monospace"
                android:gravity="center"
                android:text="item"
                android:textColor="@drawable/text_color"
                android:textSize="16sp"
                tools:ignore="TouchTargetSizeCheck"
                tools:layout_editor_absoluteX="285dp"
                tools:layout_editor_absoluteY="307dp" />

        </RadioGroup>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/entryTextField"
        android:layout_width="315dp"
        android:layout_height="57dp"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="82dp"
        android:ems="10"
        android:enabled="true"
        android:fontFamily="monospace"
        android:hint="Entry field :"
        android:isScrollContainer="true"
        android:inputType="numberDecimal"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:textSize="20dp"
        android:textCursorDrawable="@android:color/white"
        android:cursorVisible="true"
        app:backgroundTint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/outputTextField"
        android:layout_width="315dp"
        android:layout_height="57dp"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="82dp"
        android:ems="10"
        android:enabled="true"
        android:fontFamily="monospace"
        android:hint="Result :"
        android:isScrollContainer="true"
        android:inputType="numberDecimal"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:textSize="20dp"
        android:focusableInTouchMode="true"
        android:cursorVisible="false"
        android:focusable="false"
        app:backgroundTint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4" />

    <Button
        android:onClick="onViceVersaClick"
        android:id="@+id/vice_versa_button"
        android:layout_width="92dp"
        android:layout_height="80dp"
        android:layout_marginStart="160dp"
        android:layout_marginEnd="160dp"
        android:background="@drawable/vice_versa"
        android:enabled="false"
        android:elevation="4dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/outputTextField"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:onClick="makeCopyFrom"
        android:background="?android:attr/selectableItemBackground"
        android:id="@+id/buttonCopy_1"
        android:layout_width="50dp"
        android:layout_height="42dp"
        android:layout_marginTop="8dp"
        android:fontFamily="monospace"
        android:text="copy"
        android:textColor="@color/white"
        android:textSize="6dp"
        android:textStyle="bold"
        android:drawableTop="@drawable/ic_baseline_content_copy_24"
        android:drawableTint="@color/white"
        app:layout_constraintStart_toEndOf="@+id/entryTextField"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:onClick="makeCopyFrom"
        android:background="?android:attr/selectableItemBackground"
        android:id="@+id/buttonCopy_2"
        android:layout_width="50dp"
        android:layout_height="42dp"
        android:layout_marginTop="7dp"
        android:fontFamily="monospace"
        android:text="copy"
        android:textColor="@color/white"
        android:textSize="6dp"
        android:textStyle="bold"
        android:drawableTop="@drawable/ic_baseline_content_copy_24"
        android:drawableTint="@color/white"
        app:layout_constraintStart_toEndOf="@+id/outputTextField"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
        tools:ignore="TouchTargetSizeCheck" />

    <FrameLayout
        android:id="@+id/keyboard_holder"
        android:layout_width="409dp"
        android:layout_height="204dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    </FrameLayout>

    <Button
        android:id="@+id/paste_button"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="28dp"
        android:backgroundTint="@color/black"
        android:onClick="pasteByClick"
        android:paddingHorizontal="4dp"
        android:text="Paste"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonCopy_1"
        tools:ignore="TouchTargetSizeCheck" />


</androidx.constraintlayout.widget.ConstraintLayout>