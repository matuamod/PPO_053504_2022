<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="10dp"
    app:cardCornerRadius="10dp"
    android:layout_margin="2dp">


    <LinearLayout
        android:id="@+id/currentPhaseViewHolderColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:background="#FF071C"
        android:orientation="vertical"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/phaseName"
                android:layout_width="wrap_content"
                android:hint="Phase name :"
                android:textColorHint="@color/black"
                android:textSize="18sp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                />


            <TextView
                android:id="@+id/nameTextView"
                android:layout_width="wrap_content"
                tools:text="Phase name"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_height="wrap_content"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/phaseDuration"
                android:layout_width="wrap_content"
                android:layout_marginLeft="20dp"
                android:hint="Duration :"
                android:textColorHint="@color/black"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                />


            <TextView
                android:id="@+id/durationTextView"
                android:layout_width="wrap_content"
                tools:text="Duration"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/phaseRest"
                android:layout_width="wrap_content"
                android:layout_marginLeft="20dp"
                android:hint="Rest :"
                android:textColorHint="@color/black"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                />


            <TextView
                android:id="@+id/restTextView"
                android:layout_width="wrap_content"
                tools:text="Rest"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/phaseAttemptCount"
                android:layout_width="wrap_content"
                android:layout_marginLeft="20dp"
                android:hint="Attempt count :"
                android:textColorHint="@color/black"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                />


            <TextView
                android:id="@+id/attemptCountTextView"
                android:layout_width="wrap_content"
                tools:text="Attempt count"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>