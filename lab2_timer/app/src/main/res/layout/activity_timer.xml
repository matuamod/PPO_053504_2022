<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".TimerActivity">


    <TextView
        android:id="@+id/itemTime"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:fontFamily="monospace"
        android:gravity="center"
        android:text="Let's start!"
        android:textColor="@color/material_grey_600"
        android:textSize="30sp">
    </TextView>

    <TextView
        android:id="@+id/phaseTime"
        android:text="10:00"
        android:textColor="@color/material_grey_600"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="180dp"
        android:textSize="72sp"
        android:layout_width="180dp"
        android:layout_height="90dp">
    </TextView>


    <me.zhanghai.android.materialprogressbar.MaterialProgressBar
        android:id="@+id/progressCountDown"
        android:minWidth="300dp"
        android:minHeight="300dp"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        style="@style/Widget.MaterialProgressBar.ProgressBar">
    </me.zhanghai.android.materialprogressbar.MaterialProgressBar>


    <LinearLayout
        android:id="@+id/prevNextLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="325dp">

        <ImageView
            android:id="@+id/previousPhase"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_previous">
        </ImageView>

        <ImageView
            android:id="@+id/nextPhase"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="230dp"
            android:src="@drawable/ic_next">
        </ImageView>

    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/timerRecyclerView"
        android:layout_centerHorizontal="true"
        android:layout_width="330dp"
        android:layout_height="270dp"
        android:layout_below="@+id/prevNextLayout"
        tools:itemCount="3"
        tools:listitem="@layout/card_phase_for_timer_view_holder">
    </androidx.recyclerview.widget.RecyclerView>


    <LinearLayout
        android:id="@+id/startStopLayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="660dp">

        <ImageView
            android:id="@+id/pauseTimer"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="40dp"
            android:src="@drawable/ic_pause">
        </ImageView>

        <ImageView
            android:id="@+id/startTimer"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginHorizontal="50dp"
            android:src="@drawable/ic_start">
        </ImageView>

        <ImageView
            android:id="@+id/stopTimer"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="40dp"
            android:src="@drawable/ic_stop">
        </ImageView>

    </LinearLayout>


</RelativeLayout>